<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/background"
    tools:ignore="MissingClass">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:cardCornerRadius="10dp"
            >
            <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:orientation="vertical"
           >
               <LinearLayout
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/white"
                   android:orientation="vertical"
                   android:layout_marginRight="10dp"
                   android:layout_marginLeft="10dp"
                   android:layout_marginTop="5dp"
             >
                   <TextView
                       android:id="@+id/userNamePost"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textColor="@color/text"
                       android:textSize="14sp"
                       android:paddingTop="10dp"
                       >
                   </TextView>
                   <TextView
                       android:id="@+id/date"
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:textSize="14sp"
                       android:textColor="#979595"
                       android:paddingTop="10dp"
                        >
                   </TextView>
                   <TextView
                       android:id="@+id/question_title_post"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="@color/black"
                       android:textSize="18sp"
                       android:paddingTop="10dp"
                      >
                   </TextView>
                   <TextView
                       android:id="@+id/question_description_post"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:textColor="#979595"
                       android:textSize="15sp"
                       android:paddingTop="10dp"
                       >
                   </TextView>
               </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_margin="10dp">

                    <ToggleButton
                        android:id="@+id/upvote"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/white"
                        android:src="@drawable/ic_baseline_thumb_up_off_alt_24"
                        android:textColor="@color/white"></ToggleButton>

                    <TextView
                        android:id="@+id/react_count"
                        android:layout_width="55dp"
                        android:layout_height="30dp"
                        android:text="0"
                        android:textColor="@color/text"
                        android:textSize="14sp">

                    </TextView>

                    <ToggleButton
                        android:id="@+id/downvote"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@color/white"

                        android:src="@drawable/ic_baseline_thumb_down_off_alt_24"
                        android:textColor="@color/white"></ToggleButton>


                    <ImageButton
                        android:id="@+id/community_comment_button"
                        android:layout_width="40dp"
                        android:layout_height="30dp"
                        android:background="@color/white"
                         android:src="@drawable/ic_baseline_comment_24">
                    </ImageButton>
                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="30dp"
                        android:text="Comment"
                        android:textColor="@color/text"
                        android:textSize="14sp">

                    </TextView>


                </LinearLayout>
            </LinearLayout>

        </androidx.cardview.widget.CardView>
     </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>